<%- include("partials/header.ejs") %>
<main class="w-full min-[500px]:px-5 pb-10 bg-[#547792]">
  <table
    class="w-full text-sm text-left rtl:text-right text-gray-400 dark:text-gray-400">
    <thead
      class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-600 dark:text-neutral-100">
      <div class="flex justify-between items-center px-5">
        <h1 scope="col" class="bg-[#547792] text-white py-5 text-4xl font-bold">
          All Contact
        </h1>
        <div>
          <a
            href="/add-contact"
            class="text-white bg-green-700 hover:bg-green-600 focus:ring-4 focus:outline-none focus:ring-green-300 font-bold rounded-lg text-sm px-5 py-2.5 text-center dark:bg-green-500 dark:hover:bg-green-600 dark:focus:ring-green-500">
            Add contact
          </a>
        </div>
      </div>

      <tr>
        <th scope="col" class="w-2 px-6 py-5">SL.</th>
        <th scope="col" class="px-6 py-5">First Name</th>
        <th scope="col" class="px-6 py-5">Last Name</th>
        <th scope="col" class="px-6 py-5 max-[900px]:hidden">Phone</th>
        <th scope="col" class="px-6 py-5 max-[770px]:hidden">Email</th>
        <th scope="col" class="px-6 py-5">Action</th>
      </tr>
    </thead>
    <tbody>
      <% var srno = 1 %> <% contacts.forEach(contact => { %>

      <tr
        class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
        <td class="px-5 py-4"><%= srno++ %></td>
        <th
          scope="row"
          class="px-5 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
          <%= contact.first_name %>
        </th>
        <td class="px-5 py-4"><%= contact.last_name %></td>
        <td class="px-5 py-4 max-[900px]:hidden"><%= contact.phone %></td>
        <td class="px-5 py-4 max-[770px]:hidden"><%= contact.email %></td>
        <td class="px-2 py-4 flex space-x-3">
          <a
            href="/show-contact/<%= contact._id  %>"
            class="btn btn-sm btn-circle btn-outline-info"
            title="Show"
            ><i class="fa fa-eye"></i
          ></a>
          <a
            href="/edit-contact/<%= contact._id  %>"
            class="btn btn-sm btn-circle btn-outline-edit"
            title="Edit"
            ><i class="fa fa-edit"></i
          ></a>
          <a
            href="/delete-contact/<%= contact._id  %>"
            class="btn btn-sm btn-circle btn-outline-delete"
            title="Delete"
            ><i class="fa fa-times"></i
          ></a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</main>
<%- include("partials/footer.ejs") %>
