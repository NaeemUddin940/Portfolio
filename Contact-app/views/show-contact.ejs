<%- include("partials/header.ejs") %>
<main
  class="w-full h-[calc(100vh-13vh)] min-[500px]:p-5 pb-10 min-[770px]:px-10 bg-gray-900">
  <h1
    scope="col"
    class="w-full bg-gray-900 text-cyan-500 px-6 py-5 flex justify-center text-4xl font-bold">
    Show Contact
  </h1>
  <form class="max-w-md mx-auto px-2">
    <div class="mb-5 flex">
      <label
        for="first_name"
        class="block mb-2 w-[25%] text-sm font-medium text-gray-900 dark:text-white"
        >First Name</label
      >
      <div
        class="shadow-xs bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-xs-light">
        <p></p>
      </div>
    </div>
    <div class="mb-5 flex">
      <label
        for="last_name"
        class="block mb-2 w-[25%] text-sm font-medium text-gray-900 dark:text-white"
        >Last Name</label
      >
      <div
        class="shadow-xs bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-xs-light">
        <p></p>
      </div>
    </div>
    <div class="mb-5 flex">
      <label
        for="text"
        class="block mb-2 w-[30%] text-sm font-medium text-gray-900 dark:text-white"
        >Your Number</label
      >
      <div
        class="shadow-xs bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-xs-light">
        <p></p>
      </div>
    </div>
    <div class="mb-5 flex">
      <label
        for="email"
        class="block mb-2 w-[30%] text-sm font-medium text-gray-900 dark:text-white"
        >Your Email</label
      >
      <div
        class="shadow-xs bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-xs-light">
        <p></p>
      </div>
    </div>
    <div class="block items-start mb-5">
      <label
        for="textarea"
        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
        Address
      </label>
      <textarea
        class="shadow-xs max-h-20 min-h-20 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-xs-light"
        name="textarea"
        placeholder="Enter Your Address"
        disabled
        id="textarea"></textarea>
    </div>
    <div class="space-x-2">
      <a
        href="/edit-contact"
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-bold rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        Edit
      </a>
      <a
        href="/delete-contact"
        class="text-white bg-red-700 hover:bg-red-400 focus:ring-4 focus:outline-none focus:ring-red-300 font-bold rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-400 dark:focus:ring-red-800">
        Delete
      </a>
      <a
        href="/"
        class="text-white bg-amber-700 hover:bg-amber-600 focus:ring-4 focus:outline-none focus:ring-amber-300 font-bold rounded-lg text-sm px-5 py-2.5 text-center dark:bg-amber-600 dark:hover:bg-amber-700 dark:focus:ring-amber-800">
        Cancel
      </a>
    </div>
  </form>
</main>
<%- include("partials/footer.ejs") %>
